<h1>Telbook</h1>

<% if @friends.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>ID</th>
        <th>氏名</th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td style="text-align: right"><%= friend.id %></td>
          <td><%= link_to friend.name, friend  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>データがありません。</p>
<% end %>


